<div class="pull-left">
    <p ><%= review.content %></p>
</div>
<br>
<div class="pull-right">
    <p>
        <small>Submitted
            <strong>
              <%= time_ago_in_words(review.created_at) %>ago
            </strong>
            by
            <%= review.user.email %></small>
    </p>
</div>
<br>

  <div class="review-delete review-delete-showpage">
  <% if review.user == current_user %>
    <%= link_to video_review_path(review.video, review), class: "btn btn-floating pulse delete-favorite right", method: :delete, data: { confirm: "Are you sure?"} do %>
      <i class="material-icons small">delete</i>
    <% end %>
  <% end %>

  <br>
  <hr style="margin-top: 20px;">

  </div>
