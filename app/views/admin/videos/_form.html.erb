<%= form_for [:admin, @video] do |f| %>
  <div class="input-field">
    <%= f.text_field :wistia, placeholder: 'Link', length: '10' %>
  </div>

  <div class="input-field">
    <%= f.text_field :title, placeholder: 'Title', length: '20' %>
  </div>

  <div class="input-field">
    <%= f.text_area :description, placeholder: 'Description', length: '800', class: 'materialize-textarea'  %>
  </div>

  <button type="submit" name="button" class="btn waves-effect waves-light">Submit</button>
  <a href="<%= admin_videos_path %>" class="btn waves-effect waves-light">Back</a>
<% end %>
