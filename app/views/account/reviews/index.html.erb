<div class="col m12">

  <h2 class="text-center"> 我发表过的評論 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> Content </th>
        <th> Video Name </th>
        <th> Last Update </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td> <%= review.content %> </td>
          <td> <%= review.video.title %> </td>
          <td> <%= review.updated_at %> </td>
          <td> <%= link_to('Edit', edit_video_review_path(review.video, review), class: "btn btn-default btn-xs") %></td>
          <td> <%= link_to('Delete', video_review_path(review.video, review), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-xs") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
